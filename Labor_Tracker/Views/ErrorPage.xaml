<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Labor_Tracker.Views.ErrorPage"
    BackgroundColor="{StaticResource BackgroundColor}">
    <StackLayout Padding="20" Spacing="15" VerticalOptions="CenterAndExpand">
        <Label Text="An error occurred while starting the app." TextColor="{StaticResource TextColor}" FontSize="20" HorizontalOptions="Center" />
        <Label Text="{Binding ErrorMessage}" TextColor="{StaticResource AccentColor}" HorizontalOptions="Center" />
        <Button Text="Try Again" Command="{Binding RetryCommand}" Style="{StaticResource PrimaryButtonStyle}" />
    </StackLayout>
</ContentPage>
