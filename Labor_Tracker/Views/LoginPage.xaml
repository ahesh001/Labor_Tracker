<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Labor_Tracker.Views.LoginPage"
    BackgroundColor="{StaticResource BackgroundColor}"
    Title="Login">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Entry Placeholder="Username" Text="{Binding Username}" TextColor="{StaticResource TextColor}" />
            <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" TextColor="{StaticResource TextColor}" />
            <Button Text="Login" Command="{Binding LoginCommand}" Style="{StaticResource PrimaryButtonStyle}" />
            <Label Text="{Binding Message}" TextColor="{StaticResource AccentColor}" />
            <Button Text="Register" Command="{Binding NavigateToRegisterCommand}" Style="{StaticResource AccentButtonStyle}" />

        </StackLayout>
    </ScrollView>
</ContentPage>
